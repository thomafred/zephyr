menuconfig SI1133
	bool "SI1133 I2C UV index and ambient light sensor"
	depends on I2C
	help
	  Enable driver for SI1133 I2C-based UV index and ambient
	  light sensor.

if SI1133

config SI1133_DEV_NAME
	string "SI1133 device name"
	default "SI1133"

config SI1133_I2C_ADDR
	hex "SI1133 I2C slave address"
	default 0x55
	help
	  Specify the I2C slave address for SI1133.

config SI1133_I2C_DEV_NAME
	string "SI1133 I2C master interface"
	default "I2C_0"
	help
	  Specify the device name of the I2C master device to which
	  SI1133 is connected.

choice
	prompt "SI1133 trigger mode"
	default SI1133_TRIGGER_GLOBAL_THREAD

config SI1133_TRIGGER_NONE
	bool "No trigger"

config SI1133_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select SI1133_TRIGGER

config SI1133_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select SI1133_TRIGGER

endchoice

config SI1133_TRIGGER
	bool

config SI1133_GPIO_CONTROLLER
	string "GPIO controller for SI1133 interrupt"
	depends on SI1133_TRIGGER
	default "GPIO_0"
	help
	  Specify the device name of the GPIO controller the SI1133 interrupt
	  is connected to.

config SI1133_GPIO_PIN
	int "GPIO pin for SI1133 interrupt"
	depends on SI1133_TRIGGER
	default 11

config SI1133_THREAD_STACK_SIZE
	int "Sensor delayed work thread stack size"
	depends on SI1133_TRIGGER_OWN_THREAD
	default 1024

config SI1133_THREAD_PRIORITY
	int "Thread priority"
	depends on SI1133_TRIGGER_OWN_THREAD
	default 10

endif # SI1133
